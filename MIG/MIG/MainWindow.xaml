<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MIG"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>

            <StackPanel x:Name="sp" Margin="50,100,50,100" Orientation="Horizontal">
                <TextBox x:Name="txt_FolderName" Width="400" Height="20"/>
                <Button x:Name="btn_GetFolderName" Click="GetFolderName" Width="20" Height="20"/>
                <Button x:Name="btn_start" Click="btn_Start_Click" Width="50" Height="20" Content="Go!"/>
            </StackPanel>
         
    </Grid>
</Window>
